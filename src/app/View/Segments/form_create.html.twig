<form role="form" action="index.php" method="GET">
	<input name="control" type="hidden" value="create">
	<div class="form-group">
		<label for="email">Your email</label>
		<input name="email" type="email" placeholder="joe.bloggs@example.com" class="form-control" required />
	</div>
	<div class="form-group">
		<label for="name">Site Title</label>
		<input name="name" type="text" placeholder="Optional" class="form-control" />
	</div>
	<div class="form-group">
    <label for="v">Version</label>
    <select class="form-control" name="v">
      <option>latest</option>
	  <option>nightly</option>
    </select>
  </div>
	{% if ssl_available == true %}
	<div class="form-check">
		<input name="secure" type="checkbox" class="form-check-input" />
		<label for="secure" class="form-check-label">Use HTTPS</label>
	</div>
	{% endif %}
	<p><em>Login details will be emailed to you.</em></p>
	<button type="submit" class="btn btn-primary" value="Create" onclick="return confirm('WARNING: All sites generated begin with a 60 day expiry. It is your responsibility to ensure the site remains active as long as it is needed, otherwise it will be automatically pruned.')">
		Submit
	</button>
</form>
