{% extends "Segments/modal.html.twig" %}

{% block content %}
<form role="form" action="index.php" method="GET">
	<div class="modal-body">
		<input name="control" type="hidden" value="create">
		<div class="form-group">
			<label for="email">Your email</label>
			<input name="email" type="email" placeholder="joe.bloggs@example.com" class="form-control" required />
		</div>
		<div class="form-group">
			<label for="name">Site Title</label>
			<input name="name" type="text" placeholder="Optional" class="form-control" />
		</div>
		<div class="form-group row">
			<div class="col-sm-8">
				<label for="v" id="selVersion">Version</label>
				<select class="form-control" name="v">
					<option>latest</option>
					<option>nightly</option>
					<option value="other">other...</option>
				</select>
			</div>
			<div class="col-sm-4" id="txtVersionNo">
				<label for="vnum">Version No.</label>
				<input name="vnum" type="text" placeholder="4.2.1" class="form-control" />
			</div>
		</div>
		<p><em>Login details will be emailed to you.</em></p>	
	</div> <!-- .modal-body -->
	<div class="modal-footer">
		<button type="submit" class="btn btn-primary" value="Create" id="btnCreateNew">Create</button>
		<button type="submit" class="btn btn-primary" id="btnCreateNewDisabled" disabled style="display:none">
			<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
			Creating, please wait...
		</button>
	</div>
</form>
{% endblock %}